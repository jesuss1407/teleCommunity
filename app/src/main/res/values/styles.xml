<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal_200</item>

    </style>

    <style name="EventoDetalleDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@style/PopupAnimation</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Cambia el color del texto -->
        <item name="android:textColor">@color/black</item>
        <!-- Cambia el color del cursor -->
        <item name="colorControlNormal">@color/purple</item>
        <!-- Cambia el color del ícono de búsqueda -->
        <item name="iconTint">@color/black</item>
        <!-- Cambia el color del fondo de la barra de búsqueda -->
        <item name="queryBackground">@color/purple_500</item>
    </style>

</resources>
