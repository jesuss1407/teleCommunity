<!-- fragment_evento_detalle.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewTituloEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título del Evento"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/textViewFechaEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha del Evento"
        android:textSize="16sp"
        android:layout_margin="16dp"/>

    <!-- Agrega más TextViews u otras vistas para mostrar otros detalles del evento -->

</LinearLayout>
